# Copy this to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/zendfi

# Solana Configuration  
SOLANA_RPC_URLS=https://api.devnet.solana.com,https://rpc.ankr.com/solana_devnet
RECIPIENT_WALLET=your_solana_wallet_address_here

# Server Configuration
PORT=3000
FRONTEND_URL=http://localhost:3001

# Logging
RUST_LOG=zendfi=debug,tower_http=debug,sqlx=info

# Optional: Production settings (uncomment when needed)
# JWT_SECRET=your-super-secret-jwt-key
# API_RATE_LIMIT=1000
# FLUTTERWAVE_SECRET_KEY=your-flutterwave-secret
# PAYSTACK_SECRET_KEY=your-paystack-secret